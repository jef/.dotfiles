[Trigger]
Operation = Install
Operation = Remove
Operation = Upgrade
Type = Package
Target = *

[Action]
Description = Saving package list...
When = PostTransaction
Exec = /usr/bin/bash -c "/usr/bin/pacman -Qqen > /home/jef/.config/pacman/package-list.main && /usr/bin/pacman -Qqem > /home/jef/.config/pacman/package-list.aur"
